<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Profile Icon Placeholder -->
    <ImageView
        android:id="@+id/ivFarmerProfileIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profilelogo"
        android:layout_marginBottom="16dp"
        android:contentDescription="Farmer Profile Icon" />

    <!-- Title: Farmer Profile -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Profile"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="@font/adlam_display"
        android:textColor="#333333"
        android:paddingBottom="24dp" />

    <!-- Farmer's Name Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer's Name"
        android:textColor="#555555"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFarmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:hint="Enter farmer's name"
        android:layout_marginBottom="12dp" />

    <!-- Farmer's Email Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer's Email"
        android:textColor="#555555"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFarmerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:enabled="false"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:hint="Enter farmer's email"
        android:layout_marginBottom="12dp" />

    <!-- Farm Details Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farm Details"
        android:textColor="#555555"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFarmDetails"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:hint="Enter farm details"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp" />

    <!-- Save Changes Button -->
    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Save Changes"
        android:backgroundTint="@color/primary_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:elevation="4dp"
        android:layout_marginTop="24dp" />
</LinearLayout>
