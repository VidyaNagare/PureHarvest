<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Order Details Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/orderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: â‚¹0.00"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:paddingTop="4dp" />

        <!-- Customer Details Section (Visible for Farmers) -->
        <TextView
            android:id="@+id/orderCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:visibility="gone" /> <!-- Default hidden -->

        <TextView
            android:id="@+id/orderCustomerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Address"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:visibility="gone" /> <!-- Default hidden -->

        <!-- Status Spinner (Only visible for Farmers) -->
        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:visibility="gone" /> <!-- Default hidden -->
    </LinearLayout>
</LinearLayout>
